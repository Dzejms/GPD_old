@model ProductivityApp.Models.EditTaskViewModel

@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Task</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("new", "tasks", FormMethod.Post, new { id = "newTaskForm" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Task</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Task.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Task.Name)
            @Html.ValidationMessageFor(model => model.Task.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Task.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Task.Description)
            @Html.ValidationMessageFor(model => model.Task.Description)
        </div>

        <p>
            <input id="createTask" type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
