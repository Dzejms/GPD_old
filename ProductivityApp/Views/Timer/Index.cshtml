@using DomainModel.Entities
@using ProductivityApp.Models
@model TimerPageViewModel

@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="../../Scripts/Timer.js" type="text/javascript"></script>
<h2>@Model.PageTitle</h2>
<h3>Time Remaining: <span id="timeLeft">@Model.TimerMinutes</span></h3>
<ul>
@foreach (Task task in Model.Tasks)
{
    <li>@task.Description</li>
}
<input type="hidden" name="minutes" id="minutes" value="@Model.TimerMinutes" />
</ul>